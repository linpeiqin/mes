<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>

    <LinearLayout style="@style/sd_page_content_style" >
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/sd_padding_common_edge_small"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0" >
	
	                <EditText
	                    android:id="@+id/produce_asset_seq_produce_edit"
	                    style="@style/sd_edit_text_style"
	                    android:hint="@string/ko_title_scan_to_input_produce_num"
	                    android:inputType="textVisiblePassword"
	                    android:singleLine="true"
	                    android:layout_centerVertical="true" />
	
	                <ImageView
	                    android:id="@+id/produce_asset_seq_produce_search_btn"
	                    android:paddingLeft="@dimen/sd_padding_common_edge_huge"
	                    android:paddingRight="@dimen/sd_padding_common_edge_middle"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:scaleType="fitCenter"
	                    android:src="@drawable/ko_wip_id_search_icon_4"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true" />
	            </RelativeLayout>
	
	            <Button
	                android:id="@+id/produce_asset_seq_produce_btn"
	                style="@style/sd_button_bottom_bar_style"
	                android:layout_width="189dp"
	                android:layout_height="44dp"
	                android:layout_marginLeft="@dimen/sd_padding_common_edge"
	                android:layout_marginRight="2dp"
	                android:padding="@dimen/sd_padding_common_edge_small"
	                android:text="@string/ko_title_camera_input_produce" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/sd_padding_common_edge_small"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0" >
	
	                <EditText
	                    android:id="@+id/produce_asset_seq_asset_edit"
	                    style="@style/sd_edit_text_style"
	                    android:hint="@string/ko_title_scan_to_input_asset"
	                    android:inputType="textVisiblePassword"
	                    android:singleLine="true"
	                    android:layout_centerVertical="true"
	                    android:enabled="false" />
	
	                <ImageView
	                    android:paddingLeft="@dimen/sd_padding_common_edge_huge"
	                    android:paddingRight="@dimen/sd_padding_common_edge_middle"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:scaleType="fitCenter"
	                    android:src="@drawable/ko_wip_id_search_icon_4"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:visibility="gone" />
	            </RelativeLayout>
	
	            <Button
	                android:id="@+id/produce_asset_seq_asset_btn"
	                style="@style/sd_button_bottom_bar_style"
	                android:layout_width="189dp"
	                android:layout_height="44dp"
	                android:layout_marginLeft="@dimen/sd_padding_common_edge"
	                android:layout_marginRight="2dp"
	                android:padding="@dimen/sd_padding_common_edge_small"
	                android:text="@string/ko_title_camera_input_asset"
	                android:visibility="gone" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/sd_padding_common_edge_small"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0" >
	
	                <TextView
	                    android:id="@+id/produce_asset_seq_seq_edit"
	                    style="@style/sd_edit_text_style"
	                    android:text="@string/ko_title_scan_to_input_seq"
	                    android:singleLine="true"
	                    android:layout_centerVertical="true"
	                     />
	
	                <ImageView
	                    android:id="@+id/produce_asset_seq_search_seq_btn"
	                    android:paddingLeft="@dimen/sd_padding_common_edge_huge"
	                    android:paddingRight="@dimen/sd_padding_common_edge_middle"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:scaleType="fitCenter"
	                    android:src="@drawable/ko_wip_id_search_icon_4"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:visibility="gone" />
	            </RelativeLayout>
	
	            <Button
	                android:id="@+id/produce_asset_seq_seq_btn"
	                style="@style/sd_button_bottom_bar_style"
	                android:layout_width="189dp"
	                android:layout_height="44dp"
	                android:layout_marginLeft="@dimen/sd_padding_common_edge"
	                android:layout_marginRight="2dp"
	                android:padding="@dimen/sd_padding_common_edge_small"
	                android:text="@string/ko_title_camera_input_seq"
	                android:visibility="gone" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/sd_padding_common_edge_small"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0" >
	
	                <TextView
	                    android:id="@+id/produce_asset_seq_pafterop_edit"
	                    style="@style/sd_edit_text_style"
	                    android:hint="以上新增工序加到此工序后"
	                    android:singleLine="true"
	                    android:layout_centerVertical="true" />
	
	                <ImageView
	                    android:paddingLeft="@dimen/sd_padding_common_edge_huge"
	                    android:paddingRight="@dimen/sd_padding_common_edge_middle"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:scaleType="fitCenter"
	                    android:src="@drawable/ko_wip_id_search_icon_4"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:visibility="gone" />
	            </RelativeLayout>
	
	            <Button
	                android:id="@+id/produce_asset_seq_pafterop_btn"
	                style="@style/sd_button_bottom_bar_style"
	                android:layout_width="189dp"
	                android:layout_height="44dp"
	                android:layout_marginLeft="@dimen/sd_padding_common_edge"
	                android:layout_marginRight="2dp"
	                android:padding="@dimen/sd_padding_common_edge_small"
	                android:text="@string/ko_title_camera_input_asset"
	                android:visibility="gone" />
	        </LinearLayout>
	        
	    </LinearLayout>
    </LinearLayout>
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="@dimen/sd_padding_common_edge_middle">
	    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
	        
            <TextView
		        android:id="@+id/produce_id_asset_seq_desc_view"
		        style="@style/sd_text_black_big_style"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="top|left" />
            
        </LinearLayout>
        
    </ScrollView>
    
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/sd_padding_common_edge_middle" >

        <Button
            android:id="@+id/produce_asset_seq_next_step_btn"
            style="@style/sd_button_bottom_bar_style"
            android:text="@string/ko_title_start_produce_next_step" />
        
        <Button
	         android:id="@+id/produce_asset_seq_search_btn"
	         style="@style/sd_button_bottom_bar_no_weight_style"
	         android:layout_width="120dp"
	         android:layout_marginLeft="@dimen/sd_padding_common_edge"
	         android:text="@string/ko_title_search_seq" />
	</LinearLayout>

</LinearLayout>