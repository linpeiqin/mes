<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>

    <LinearLayout style="@style/sd_page_content_style"
		android:orientation="horizontal">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="日期："
					/>
				<TextView
					android:id="@+id/text_attendance_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="日期"
					/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="组别："
					/>
				<TextView
					android:id="@+id/text_attendance_group"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="组别"
					/>
			</TableRow>

		</TableLayout>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="班次："
					/>
				<TextView
					android:id="@+id/text_day_or_night"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="班次" />
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="组长："
					/>
				<TextView
					android:id="@+id/text_group_master"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="组长" />
			</TableRow>
		</TableLayout>
    </LinearLayout>
	<LinearLayout style="@style/sd_page_content_style"
		android:orientation = "vertical">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="预计出勤人数:"
					/>

				<EditText
					android:id="@+id/edit_forecast_work_man"
					style="@style/sd_edit_text_style"
					android:hint="预计出勤人数"
					android:phoneNumber="true"
					/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="生产正常工时:"
					/>
				<EditText
					android:id="@+id/edit_job_time"
					style="@style/sd_edit_text_style"
					android:hint="生产正常工时"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="生产加班工时:"

					/>
				<EditText
					android:id="@+id/edit_job_overtime"
					style="@style/sd_edit_text_style"
					android:hint="生产加班工时"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="非生产正常工时:"
					/>
				<EditText
					android:id="@+id/edit_nonjob_time"
					style="@style/sd_edit_text_style"
					android:hint="非生产正常工时"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="非生产加班工时:"
					/>
				<EditText
					android:id="@+id/edit_nonjob_overtime"
					style="@style/sd_edit_text_style"
					android:hint="非生产加班工时"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="新进员工数（个）:"
					/>
				<EditText
					android:id="@+id/edit_new_in_quantity"
					style="@style/sd_edit_text_style"
					android:hint="新进员工数（个）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="出差（个）:"
					/>
				<EditText
					android:id="@+id/edit_out_quantity"
					style="@style/sd_edit_text_style"
					android:hint="出差（个）"
                    android:phoneNumber="true"/>
			</TableRow>
		</TableLayout>
		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="实际出勤人数:"
					/>
				<EditText
					android:id="@+id/edit_fact_work_man"
					style="@style/sd_edit_text_style"
					android:hint="实际出勤人数"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="请假（时）:"
					/>
				<EditText
					android:id="@+id/edit_leave_quantity"
					style="@style/sd_edit_text_style"
					android:hint="请假（时）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="旷工（时）:"
					/>
				<EditText
					android:id="@+id/edit_absent_quantity"
					style="@style/sd_edit_text_style"
					android:hint="旷工（时）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="年休（时）:"
					/>
				<EditText
					android:id="@+id/edit_year_of_rest_day"
					style="@style/sd_edit_text_style"
					android:hint="年休（时）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="轮休（个）:"
					/>
				<EditText
					android:id="@+id/edit_turn_of_rest_day"
					style="@style/sd_edit_text_style"
					android:hint="轮休（个）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="自离辞工（个）:"
					/>
				<EditText
					android:id="@+id/edit_auto_demission_quantity"
					style="@style/sd_edit_text_style"
					android:hint="自离辞工（个）"
                    android:phoneNumber="true"/>
			</TableRow>
			<TableRow>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="辞工解雇（个）:"
					/>
				<EditText
					android:id="@+id/edit_fire_quantity"
					style="@style/sd_edit_text_style"
					android:hint="辞工解雇（个）"
                    android:phoneNumber="true"/>
			</TableRow>
		</TableLayout>
	</LinearLayout>
		<EditText
			android:id="@+id/edit_remark"
			style="@style/sd_edit_text_style"
			android:hint="备注"
			/>

	</LinearLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:padding="@dimen/sd_padding_common_edge_middle">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/text_attendance_list"
				style="@style/sd_text_black_big_style"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left" />
		</LinearLayout>
	</ScrollView>
	<!--按钮列表-->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/sd_padding_common_edge_middle"
		android:paddingLeft="@dimen/sd_padding_common_edge_small"
		android:paddingRight="@dimen/sd_padding_common_edge_small" >
	<Button
		android:id="@+id/attendance_finish_btn"
		style="@style/sd_button_bottom_bar_no_weight_style"
		android:layout_margin="@dimen/sd_padding_common_edge_middle"
		android:text="完成" />
	</LinearLayout>
</LinearLayout>