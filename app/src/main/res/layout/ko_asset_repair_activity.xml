<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>

    <ScrollView
        style="@style/sd_common_scroll_view_style"
        android:padding="@dimen/sd_padding_common_edge" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/sd_page_content_style"
                android:layout_margin="0dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/sd_height_common_click_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset" />

                    <TextView
                        android:id="@+id/asset_repair_equip_no_text"
                        style="@style/sd_text_gray_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_fail_desc" />

                    <TextView
                        android:id="@+id/asset_repair_fail_desc_edit"
                        style="@style/sd_text_as_edit_style"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_repair_start_time" />

                    <TextView
                        android:id="@+id/asset_repair_act_fix_time_edit"
                        style="@style/sd_text_as_edit_style"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_repair_end_time" />

                    <TextView
                        android:id="@+id/asset_repair_act_completed_time_edit"
                        style="@style/sd_text_as_edit_style"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_fail_time" />

                    <EditText
                        android:id="@+id/asset_repair_reset_down_time_edit"
                        style="@style/sd_text_as_edit_style"
                        android:inputType="phone"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_repair_desc" />

                    <EditText
                        android:id="@+id/asset_repair_repair_desc_edit"
                        style="@style/sd_text_as_edit_style" />
                </LinearLayout>
                
                
                
                <LinearLayout
                    android:id="@+id/asset_repair_changed_parts_parent_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    
                </LinearLayout>
                
                <TextView 
                    android:id="@+id/asset_repair_changed_parts_add_changed_part"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ko_title_add_changed_asset_parts"
                    style="@style/sd_text_click_style"
                    android:paddingTop="@dimen/sd_padding_common_edge"
                    android:paddingBottom="@dimen/sd_padding_common_edge"/>
                
                <LinearLayout
                    android:id="@+id/asset_repair_check_remarks_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/sd_height_common_click_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_width_min_repair_left_width"
                        android:text="@string/ko_title_asset_check_remarks" />

                    <TextView
                        android:id="@+id/asset_repair_check_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/sd_text_gray_big_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <HorizontalScrollView
                        android:id="@+id/asset_repair_pic_parent_scroll_view"
                        style="@style/sd_common_scroll_view_style" >

                        <LinearLayout
                            android:id="@+id/asset_repair_pic_parent_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/asset_repair_shut_pic_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ko_asset_add_camera_shot_btn_bg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_padding_common_edge_middle"
                android:gravity="left|top"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/ko_title_operate_staff" />

                <TextView
                    android:id="@+id/add_asset_staff_name"
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="57766-朱倩倩" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/asset_repair_sure_btn"
        style="@style/sd_button_bottom_bar_no_weight_style"
        android:layout_margin="@dimen/sd_padding_common_edge"
        android:text="@string/ko_title_submit_asset_repair_result" />

</LinearLayout>