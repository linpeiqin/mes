<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/carmera_parent_view" >
    
	<SurfaceView 
	    android:id="@+id/camera_sur_view"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"/>
	
	<LinearLayout 
	    android:id="@+id/camera_shot_parent"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="right|center_vertical">
	    
	    <ImageView
	        android:id="@+id/camera_shot_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:padding="@dimen/sd_padding_common_edge_huge"
	        android:src="@drawable/ko_camera_shot_btn"/>
	    
	    <ImageView 
	        android:id="@+id/camera_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ko_camera_cancel_btn"
	        android:padding="@dimen/sd_padding_common_edge_huge"
	        android:layout_marginBottom="@dimen/sd_padding_common_edge"/>
	    
	    <ImageView 
	        android:id="@+id/camera_save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ko_camera_save_btn"
	        android:padding="@dimen/sd_padding_common_edge_huge"
	        android:layout_marginTop="@dimen/sd_padding_common_edge"
	        />
	</LinearLayout>
</FrameLayout>
