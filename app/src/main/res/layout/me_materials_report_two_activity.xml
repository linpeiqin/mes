<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>

    <ScrollView style="@style/sd_common_scroll_view_style" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd_padding_common_edge_big"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/materials_report_2_produce_num"
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/materials_report_2_seq_code"
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/materials_report_2_info_display"
                style="@style/sd_text_black_big_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sd_padding_common_edge_big"
                android:gravity="left" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd_padding_common_edge_big"
                android:gravity="left|center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_materials_report_standard_material_num" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <TextView
                            android:id="@+id/materials_report_2_standard_material_num_edit"
                            style="@style/sd_edit_text_style"
                            android:layout_centerVertical="true"
                            android:singleLine="true" />

                        <ImageView
                            android:id="@+id/materials_report_2_scan_standard_material_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/sd_padding_common_edge_huge"
                            android:paddingRight="@dimen/sd_padding_common_edge_middle"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ko_scan_icon"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_materials_report_new_material_num" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@+id/materials_report_2_new_material_num_edit"
                            style="@style/sd_edit_text_style"
                            android:layout_centerVertical="true"
                            android:hint="@string/ko_title_search_materials_by_num"
                            android:inputType="textVisiblePassword"
                            android:singleLine="true" />

                        <ImageView
                            android:id="@+id/materials_report_2_search_new_material_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/sd_padding_common_edge_huge"
                            android:paddingRight="@dimen/sd_padding_common_edge_middle"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ko_wip_id_search_icon_4" />
                    </RelativeLayout>
                    
                    <Button
                        android:id="@+id/materials_report_2_search_new_material_scan_btn"
                        style="@style/sd_button_bottom_bar_no_weight_style"
                        android:layout_width="106dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="@dimen/sd_padding_common_edge"
                        android:padding="@dimen/sd_padding_common_edge_small"
                        android:text="@string/ko_title_scan_material_code" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/materials_report_2_new_material_info"
                        style="@style/sd_text_black_big_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/sd_padding_common_edge_middle"
                        android:paddingTop="@dimen/sd_padding_common_edge_middle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_materials_report_real_qty" />

                    <EditText
                        android:id="@+id/materials_report_2_real_qty"
                        style="@style/sd_text_as_edit_style"
                        android:inputType="phone"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_materials_report_remark" />

                    <EditText
                        android:id="@+id/materials_report_2_remark_edit"
                        style="@style/sd_text_as_edit_style"
                        android:inputType="text"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/materials_report_2_use_btn"
            style="@style/sd_button_bottom_bar_style"
            android:layout_margin="@dimen/sd_padding_common_edge_big"
            android:text="@string/ko_title_materials_report_use_btn" />

        <Button
            android:id="@+id/materials_report_2_return_btn"
            style="@style/sd_button_bottom_bar_style"
            android:layout_margin="@dimen/sd_padding_common_edge_big"
            android:text="@string/ko_title_materials_report_return_btn" />
    </LinearLayout>

</LinearLayout>