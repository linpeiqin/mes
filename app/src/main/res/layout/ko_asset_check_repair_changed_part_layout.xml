<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        style="@style/sd_text_black_big_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/ko_width_min_repair_left_width"
        android:text="@string/ko_title_changed_parts" />

    <EditText
        android:id="@+id/asset_repair_changed_parts_edit"
        style="@style/sd_text_as_edit_style" />

    <Button
        android:id="@+id/asset_repair_changed_parts_btn"
        style="@style/sd_button_bottom_bar_no_weight_style"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/sd_padding_common_edge"
        android:text="@string/ko_title_selected_parts" />
    
    <Button 
        android:id="@+id/asset_repair_changed_parts_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ko_del_pic_btn_bg"
        android:layout_marginLeft="@dimen/sd_padding_common_edge"/>

</LinearLayout>