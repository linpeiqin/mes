<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>
    
    <LinearLayout
        android:id="@+id/asset_add_reset_equip_status_layout"
        style="@style/sd_common_item_click_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/sd_padding_common_edge" >

        <TextView
            style="@style/sd_text_black_big_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/ko_job_info_input_width"
            android:text="@string/ko_title_asset" />

        <TextView
            android:id="@+id/asset_check_asset_name_text"
            style="@style/sd_text_gray_big_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="right|center_vertical"
            android:singleLine="true" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/asset_check_last_check_time_layout"
        style="@style/sd_common_item_click_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/sd_padding_common_edge" >

        <TextView
            style="@style/sd_text_black_big_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/ko_job_info_input_width"
            android:text="@string/ko_title_asset_last_check_time" />

        <TextView
            android:id="@+id/asset_check_last_check_time_view"
            style="@style/sd_text_red_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="right|center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <ScrollView
        style="@style/sd_common_scroll_view_style"
        android:padding="@dimen/sd_padding_common_edge" >

        <LinearLayout
            android:id="@+id/asset_check_add_check_parent_layout"
            style="@style/sd_page_content_style"
            android:layout_margin="0dp" >

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/asset_check_add_check_btn"
        style="@style/sd_button_bottom_bar_no_weight_style"
        android:layout_margin="@dimen/sd_padding_common_edge"
        android:text="@string/ko_title_submit_asset_check_result" />

</LinearLayout>