<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sd_activity_style" >

    <cn.kol.pes.widget.KoPageTitleLayoutView
        android:id="@+id/sd_common_title_view"
        style="@style/sd_common_top_bar_class_use_style" >
    </cn.kol.pes.widget.KoPageTitleLayoutView>

    <ScrollView
        style="@style/sd_common_scroll_view_style"
        android:padding="@dimen/sd_padding_common_edge" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/sd_page_content_style"
                android:layout_margin="0dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_asset" />

                    <TextView
                        android:id="@+id/asset_add_equip_no_text"
                        style="@style/sd_text_as_edit_style"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/asset_add_equip_no_btn"
                        style="@style/sd_button_bottom_bar_no_weight_style"
                        android:layout_width="96dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="@dimen/sd_padding_common_edge"
                        android:padding="@dimen/sd_padding_common_edge_small"
                        android:text="@string/ko_title_scan_asset" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_asset_machine_down_time" />

                    <TextView
                        android:id="@+id/asset_add_reset_check_time_edit"
                        style="@style/sd_text_as_edit_style"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/asset_add_reset_equip_status_layout"
                    style="@style/sd_common_item_click_style"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/sd_text_black_big_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/ko_job_info_input_width"
                        android:text="@string/ko_title_asset_status" />

                    <TextView
                        android:id="@+id/asset_add_reset_equip_status_text"
                        style="@style/sd_text_click_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@string/ko_value_asset_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/asset_add_repair_info_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/asset_add_ex_fix_time_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/sd_text_black_big_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="@dimen/ko_job_info_input_width"
                            android:text="@string/ko_title_expect_repair_time_start" />

                        <TextView
                            android:id="@+id/asset_add_ex_fix_time_edit"
                            style="@style/sd_text_as_edit_style"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/asset_add_ex_completed_time_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/sd_text_black_big_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="@dimen/ko_job_info_input_width"
                            android:text="@string/ko_title_expect_repair_time_end" />

                        <TextView
                            android:id="@+id/asset_add_ex_completed_time_edit"
                            style="@style/sd_text_as_edit_style"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/sd_text_black_big_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="@dimen/ko_job_info_input_width"
                            android:text="@string/ko_title_asset_check_desc" />

                        <EditText
                            android:id="@+id/asset_add_desc_edit"
                            style="@style/sd_text_as_edit_style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal" >

                        <HorizontalScrollView 
                            android:id="@+id/asset_add_pic_parent_scroll_view"
                            style="@style/sd_common_scroll_view_style" >

                            <LinearLayout
                                android:id="@+id/asset_add_pic_parent_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal" >
                            </LinearLayout>
                        </HorizontalScrollView>

                        <ImageView
                            android:id="@+id/asset_add_shut_pic_btn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ko_asset_add_camera_shot_btn_bg" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_padding_common_edge_middle"
                android:gravity="left|top"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/ko_title_operate_staff" />

                <TextView
                    android:id="@+id/add_asset_staff_name"
                    style="@style/sd_text_black_big_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/asset_add_sure_btn"
        style="@style/sd_button_bottom_bar_no_weight_style"
        android:layout_margin="@dimen/sd_padding_common_edge"
        android:text="@string/ko_title_submit_asset_fail_result" />

</LinearLayout>