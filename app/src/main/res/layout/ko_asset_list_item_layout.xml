<?xml version="1.0" encoding="utf-8"?><!-- 设备点检列表的Item View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
	android:paddingTop="@dimen/sd_padding_common_edge_small"
	android:paddingBottom="@dimen/sd_padding_common_edge_small">

    <TextView
        android:id="@+id/asset_item_asset_name"
        style="@style/sd_text_black_big_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="S09-3 微调机" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd_padding_common_edge_small"
        android:gravity="left"
        android:orientation="horizontal" >
		<TextView
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ko_title_check_time"
            android:paddingRight="@dimen/sd_padding_common_edge_small" />
        <TextView
            android:id="@+id/asset_item_check_time"
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="20140925 12:30" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd_padding_common_edge_small"
        android:gravity="left"
        android:orientation="horizontal">
        <TextView
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ko_title_check_staff"
            android:paddingRight="@dimen/sd_padding_common_edge_small" />
        <TextView
            android:id="@+id/asset_item_check_staff"
            style="@style/sd_text_gray_big_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52277 朱倩倩" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd_padding_common_edge_small"
        android:gravity="left"
        android:orientation="horizontal"
        android:visibility="gone" >
		<TextView
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ko_title_expect_repair_time_start"
            android:paddingRight="@dimen/sd_padding_common_edge_small" />
        <TextView
            android:id="@+id/asset_item_expect_fix_time"
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="20140925 12:30" />

        <TextView
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ko_title_expect_repair_time_end"
            android:paddingRight="@dimen/sd_padding_common_edge_small" />
        <TextView
            android:id="@+id/asset_item_expect_completed_time"
            style="@style/sd_text_gray_middle_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20140925 12:30" />
    </LinearLayout>

</LinearLayout>