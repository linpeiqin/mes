<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/sd_page_content_style"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/common_dialog_title_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/sd_text_black_big_style"
            android:gravity="left|center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/sd_padding_common_edge"/>
        
        <include 
            android:id="@+id/common_dialog_title_text_line"
            layout="@layout/ko_diver_line_gray_hori"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/common_dialog_msg_text_view"
            style="@style/sd_text_black_big_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="@dimen/sd_padding_common_edge_huge"
            android:text="干他娘的" />
        
        <LinearLayout 
            android:id="@+id/common_dialog_add_view_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/sd_padding_common_edge">
            
        </LinearLayout>
        
        <include layout="@layout/ko_diver_line_gray_hori"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/sd_padding_common_edge" >
            
            <Button 
                android:id="@+id/common_dialog_ok_button"
                style="@style/sd_button_common_style"
                android:layout_weight="1.0"
                android:text="@string/ko_title_sure"/>
            
            <LinearLayout
                android:id="@+id/common_dialog_button_distenser"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
            </LinearLayout>
            
            <Button 
                android:id="@+id/common_dialog_cancel_button"
                style="@style/sd_button_common_2_style"
                android:layout_weight="1.0"
                android:text="@string/ko_title_cancel"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>