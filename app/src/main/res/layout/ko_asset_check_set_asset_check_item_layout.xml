<?xml version="1.0" encoding="utf-8"?><!-- 设备点检列表的Item View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
	android:paddingTop="@dimen/sd_padding_common_edge_small"
	android:paddingBottom="@dimen/sd_padding_common_edge_small">
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:layout_weight="1.0">

		<TextView
	        android:id="@+id/asset_check_set_asset_check_asset_name"
	        style="@style/sd_text_black_big_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minWidth="300dp"
	        android:paddingBottom="@dimen/sd_padding_common_edge_small" />
	
		<TextView
	        android:id="@+id/asset_check_set_asset_check_asset_tag"
	        style="@style/sd_text_black_big_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minWidth="300dp"
	        android:paddingTop="@dimen/sd_padding_common_edge_small" />
	
	</LinearLayout>

    <TextView
        android:id="@+id/asset_check_set_asset_check_asset_floor"
        style="@style/sd_text_black_big_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:visibility="gone" />
    
	<cn.kol.pes.widget.koCheckBoxView 
	    android:id="@+id/asset_check_set_asset_check_asset_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sd_padding_common_edge">
	</cn.kol.pes.widget.koCheckBoxView>
	
	<TextView
        android:id="@+id/asset_check_set_asset_check_status"
        style="@style/sd_text_red_middle_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sd_padding_common_edge" />

</LinearLayout>